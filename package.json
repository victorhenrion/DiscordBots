{
  "name": "discordbots",
  "version": "1.7.0",
  "scripts": {
    "start": "npx pm2-runtime start pm2-apps.json",
    "format": "prettier --write \"packages/**/*.{js,ts}\"",
    "lint": "eslint packages --max-warnings=0 && prettier --check \"packages/**/*.{js,ts}\""
  },
  "repository": "github:vpctorr/DiscordBots",
  "author": "vpctorr <bonjour@victor.id> (https://victor.id)",
  "license": "MIT",
  "workspaces": [
    "packages/MakePDF",
    "packages/VoiceNotify"
  ],
  "dependencies": {
    "pm2": "^5.2.2"
  },
  "devDependencies": {
    "dotenv": "^16.0.3",
    "eslint": "^8.32.0",
    "eslint-config-universe": "^11.1.1",
    "prettier": "^2.8.3"
  },
  "eslintConfig": {
    "extends": [
      "universe/node"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "tabWidth": 2,
    "printWidth": 120
  },
  "type": "module",
  "engines": {
    "node": ">=18.x",
    "npm": ">=9.x"
  }
}
