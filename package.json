{
  "name": "discordbots",
  "version": "1.6.0",
  "scripts": {
    "start": "npx pm2-runtime start pm2-apps.json",
    "format": "prettier --write \"packages/**/*.{js,ts}\"",
    "lint": "eslint packages --max-warnings=0 && prettier --check \"packages/**/*.{js,ts}\"",
    "version": "npm version $npm_package_version --workspaces && git add .",
    "postversion": "git push && git push --tags"
  },
  "repository": "github:vpctorr/DiscordBots",
  "author": "vpctorr <bonjour@victor.id> (https://victor.id)",
  "license": "MIT",
  "workspaces": [
    "packages/MakePDF",
    "packages/VoiceNotify"
  ],
  "dependencies": {
    "pm2": "^5.2.0",
    "discord.js": "^12.5.3"
  },
  "devDependencies": {
    "eslint": "^8.9.0",
    "eslint-config-universe": "^10.0.0",
    "prettier": "^2.5.1",
    "dotenv": "^16.0.0"
  },
  "eslintConfig": {
    "extends": [
      "universe/node"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "tabWidth": 2,
    "printWidth": 120
  },
  "type": "module",
  "engines": {
    "node": ">=17.x",
    "npm": ">=8.x"
  }
}
